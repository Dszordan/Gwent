<html>
    <head>
        <title>Angular App</title>
        <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
        <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
        <script type="text/javascript" src="/javascripts/angularApp.js"></script>
        <link href="/stylesheets/main.css" rel="stylesheet">
        <style> .glyphicon-thumbs-up { cursor:pointer } </style>
    </head>


    <body ng-app="flapperNews">
        <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
            <ul class="nav navbar-nav">
                <li><a href="/#/home">Home</a></li>
                <li ng-show="isLoggedIn()"><a>{{currentUser()}}</a></li>
                <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
                <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
                <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
                <li>
                     <span class="hidden-lg hidden-sm hidden-md">XS</span>
                    <span class="hidden-xs hidden-lg hidden-md">Small</span>
                    <span class="hidden-xs hidden-sm hidden-lg">Medium</span>    
                    <span class="hidden-xs hidden-sm hidden-md">Large</span>
                </li>
            </ul>
        </nav>
        <div class="container">
        <div class="row">
            <div  class="col-md-6 col-md-offset-3">
                <ui-view></ui-view>
            </div>
        </div>
        <script type="text/ng-template" id="/home.html">
          <div class="page-header">
            <h1>Flapper News</h1>
          </div>
          <div ng-repeat="post in posts">
            <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(post)"></span>
            {{post.upvotes}} 
            <span class="glyphicon glyphicon-thumbs-down" ng-click="decrementUpvotes(post)"></span>
            <span style="font-size:20px;margin-left:10px;">
                <a ng-show="post.link" href="{{post.link}}">
                    {{post.title}}
                </a>
                <span ng-show="post.author">
                    posted by <a>{{post.author}}</a> | 
                </span>
                <span ng-hide="post.link">{{post.title}}</span>
                <span>
                    <a href="#/posts/{{post._id}}">Comments ({{post.comments.length}})</a>
                </span>
            </span>
        </div>
        <form ng-submit='addPost()' style="margin-top:30px" ng-show="isLoggedIn()">
            <div class="form-group">
                <input type='text' class="form-control" placeholder="Title" ng-model='title'></input>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Link" ng-model="link"></input>
            </div>
            <button type='submit' class="btn btn-primary">Post</button>
        </form>
        <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
        </div>
    </script>
    <script type="text/ng-template" id="/posts.html">
        <div class="page-header">
            <h3>
              <a ng-show="post.link" href="{{post.link}}">
                {{post.title}}
              </a>
              <span ng-hide="post.link">
                {{post.title}}
              </span>
            </h3>

          <form ng-submit="addComment()" style="margin-top:30px;" ng-show="isLoggedIn()">
            <h3>Add a new comment</h3>

            <div class="form-group">
              <input type="text" class="form-control" placeholder="Comment" ng-model="body"></input>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
          </form>
          <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
        </div>
        </div>

        <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
            <span class="glyphicon glyphicon-thumbs-up"
              ng-click="incrementUpvotes(comment)"></span>
            {{comment.upvotes}} - by {{comment.author}}
            <span style="font-size:20px; margin-left:10px;">
              {{comment.body}}
            </span>
        </div>
    </script>
    <script type="text/ng-template" id="/register.html">
        <div class="page-header">
            <h1>Flapper News</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
            <span> {{error.message}}</span>
        </div>

        <form ng-submit="register()" style="margin-top:30px;">
            <h3>Register</h3>

            <div class="form-group">
                <input type="text" 
                class="form-control" 
                placeholder="Username" 
                ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password"
                class="form-control" 
                placeholder="Password" 
                ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </script>
    <script type="text/ng-template" id="/login.html">
        <div class="page-header">
            <h1>Flapper News</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
            <span> {{error.message}}</span>
        </div>

        <form ng-submit="logIn()" style="margin-top:30px">
            <h3>Log in</h3>

             <div class="form-group">
                <input type="text" 
                class="form-control" 
                placeholder="Username" 
                ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password"
                class="form-control" 
                placeholder="Password" 
                ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
        </form>
        </script>
            <script type="text/ng-template" id="/cards.html">
            <div class="page-header">
                <h1>Cards</h1>
            </div>
            <div class="cards">
                <div ng-repeat="card in availableCards" class="cardView">
                    <img ng-src="/images/{{card.cardArtImageName}}" class="cardImage" style="float:left"></img>
                    <div class="cardProperties">
                        <div>_id : {{card._id}}</div>
                        <div>Name: {{card.cardName}}</div>
                        <div>Description: {{card.cardDescription}}</div>
                        <div>Image Name: {{card.cardArtImageName}}</div>
                        <div>Range: {{card.range}}</div>
                        <div>Strength: {{card.strength}}</div>
                        <div>Type: {{card.type}}</div>
                        <div>Shiny: {{card.shiny}}</div>
                        <div><a href="#/cards/{{card._id}}" class="btn btn-primary">Modify</a></div>
                    </div>
                </div>
            </div>
        </script>
        <script type="text/ng-template" id="/cardModify.html">
            <div class="page-header">
                <h1>Card Modify</h1>
            </div>
            <form ng-submit="modifyCard()">
                <div class="cardModify">
                    <div>{{card._id}}</div>
                    <img ng-src="/images/{{card.cardArtImageName}}" class="cardImage"></img>
                    <div class="form-group">
                        <input type="text"
                        class="form-control" 
                        placeholder="cardName" 
                        ng-model="card.cardName"></input>
                    </div>
                    <div class="form-group">
                        <input type="text"
                        class="form-control" 
                        placeholder="cardDescription" 
                        ng-model="card.cardDescription"></input>
                    </div>
                    <div class="form-group">
                        <input type="text"
                        class="form-control" 
                        placeholder="cardArtImageName" 
                        ng-model="card.cardArtImageName"></input>
                    </div>
                    <div class="form-group">
                        <input type="text"
                        class="form-control" 
                        placeholder="range" 
                        ng-model="card.range"></input>
                    </div>
                    <div class="form-group">
                        <input type="text"
                        class="form-control" 
                        placeholder="type" 
                        ng-model="card.type"></input>
                    </div>
                    <div class="form-group">
                        <input type="text"
                        class="form-control" 
                        placeholder="strength" 
                        ng-model="card.strength"></input>
                    </div>
                    <div class="form-group">
                        Shiny:
                        <input type="checkbox"
                        class="form-control" 
                        placeholder="cardName" 
                        ng-model="card.shiny"></input>
                    </div>
                    <button type="submit" class="btn btn-primary">Change</button>
                </div>
            </form>
        </script>
        <script type="text/ng-template" id="/dev.html">

        </script>
        <div id="deckBuilderContainer" class="row">
           
            <div id="allCardsContainer" class="col-sm-6">
                <div class="row">
                    All Cards
                </div>
                <div class="row">
                    
                </div>
                <div class="row">
                    Cards
                </div>
            </div>
            <div id="currentDeckContainer" class="col-sm-4">
                test
            </div>
        </div>
        </div>
        </script>
    </body>
</html>